<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/invoice_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/large_text_size"
            tools:text="Invoice"/>

        <TextView
            android:id="@+id/bill_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="Bill"/>

        <TextView
            android:id="@+id/ship_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="Ship"/>

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="test@test.com"/>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="09/18/2018"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:background="@color/text_color"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/invoice_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:background="@color/text_color"/>

        <TextView
            android:id="@+id/total_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="$2.30"/>

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding_top"
            android:textSize="@dimen/medium_text_size"
            tools:text="Paid"/>
    </LinearLayout>
</ScrollView>